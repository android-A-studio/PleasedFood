<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SettingMenuRightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="SettingMenuTvStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/setting_act_textcolor_common</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="WmText">
        <item name="android:textSize">@dimen/wm_common_text_size_normal</item>
        <item name="android:textColor">@color/wm_common_text_main</item>
        <item name="android:textColorHighlight">@color/wm_common_text_highlight</item>
        <item name="android:textColorHint">@color/wm_common_text_hint</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="WmCell">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/wm_common_cell_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/wm_common_cell_padding_vertical</item>
        <item name="android:paddingRight">@dimen/wm_common_cell_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/wm_common_cell_padding_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--背景透明效果-->
    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="Translucents" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--改变radio按钮风格-->
    <style name="me_wait_radio_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">22px</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>
    <style name="Zql_theme_fullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:typeface">monospace</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Zql_theme_toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">18dp</item>
        <item name="android:windowTitleSize">18dp</item>
    </style>
    <style name="Zql_theme_OverflowMenuStyle">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">@color/colorpopumenubackground</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">10dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">#FFFF</item>

    </style>

</resources>
